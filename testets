
  import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
@RequestMapping("/api")
public class MemberController {

    @Autowired
    private MemberService memberService;

    @GetMapping("/groups/members")
    public ResponseEntity<?> getGroupMembers(@RequestParam("groupId") int groupId) {
        return ResponseEntity.ok(memberService.getGroupMembers(groupId));
    }

    @GetMapping("/subgroups")
    public ResponseEntity<?> getSubgroups(@RequestParam("groupId") int groupId) {
        return ResponseEntity.ok(memberService.getSubgroups(groupId));
    }

    @GetMapping("/subgroup/projects/members")
    public ResponseEntity<?> getSubgroupProjectsMembers(@RequestParam("subgroupId") int subgroupId) {
        return ResponseEntity.ok(memberService.getSubgroupProjectsMembers(subgroupId));
    }
}
